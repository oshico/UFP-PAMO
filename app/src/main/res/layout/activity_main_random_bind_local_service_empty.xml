<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p06_someservices.bindservice.MainRandomBindLocalServiceEmptyActivity">


    <Button
        android:id="@+id/buttonRandomService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:text="@string/call_random_service"
        android:onClick="onButtonRandomServiceClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRandomNumber"
        android:layout_width="88dp"
        android:layout_height="26dp"
        android:layout_marginTop="60dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/buttonRandomService"
        app:layout_constraintTop_toBottomOf="@+id/buttonRandomService" />


</androidx.constraintlayout.widget.ConstraintLayout>